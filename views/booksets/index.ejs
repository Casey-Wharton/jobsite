<h1 class="centered">All Booksets</h1>

<a href="/booksets/new">Create New Bookset</a>
<h3>Search Booksets</h3>
<form action="/booksets" method="GET">
    <div class="booksets-search">
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <br>
    <button type="submit">Search</button>
</form>

<div class="grid-container">
    <% 
      booksets.sort((a, b) => {  
        // If both exams meet the same criteria, sort by name alphabetically
        if (a.name < b.name) return -1;
        if (a.name > b.name) return 1;
  
        // If all criteria are equal, return 0 (they are considered equal)
        return 0;
      });

      booksets.forEach(bookset => { 
    %>
        <div class="card">
          <h2><%= bookset.name %></h2>
          <div>
              <a class="exam-links" href="/booksets/<%= bookset.id %>">View</a>
              <a class="exam-links" href="/booksets/<%= bookset.id %>/edit">Edit</a>  
              <a class="exam-links" href="/booksets/<%= bookset.id %>/tabs">Print Tabs</a>  
          </div>
        </div>
        <% }) %>
</div>

<style>
  .exam-links {text-decoration:none;
  display: inline-block;
  padding: 4px 8px;
  font-size: 16px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  color: #fff;
  background-color: #667ead;
  border: none;
  border-radius: 5px;
  margin: 4px 0;
}
</style>