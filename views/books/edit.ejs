<div class="main-block">
<div class="center-edit">
    <h2>Edit Book</h2>
    <h3><%= book.title %></h3>
<img class="current-cover" src="<%= book.coverImage %>" height=200rem/></div>
<form action="/books/<%= book.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    <%- include('_form_fields') %>
    <a href="/books/<%= book.id %>">Cancel</a>
    <button type="submit">Update</button>
</form>
</div>


<style>
.main-block {padding:16px;margin:0 auto;width:25%;}

.center-edit {text-align:center;}

.current-cover {
    margin-bottom:16px;
 }
</style>